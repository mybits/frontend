<div class="suggested-links-box">
  <h2>Popular Education Links</h2>
  <div class="grid-row">
      <div class="column-half">
        <ol class="numbered-list">
          {{#popular_results}}
            <li><a href="{{link}}" {{#external}}rel="external"{{/external}}>{{{title}}}</a></li>
          {{/popular_results}}
        </ol>
      </div>
      <div class="column-half">
        <ol class="numbered-list" start="4">
          {{#popular_results}}
            <li><a href="{{link}}" {{#external}}rel="external"{{/external}}>{{{title}}}</a></li>
          {{/popular_results}}
        </ol>
      </div>
  </div>
</div>
